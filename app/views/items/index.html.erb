

<div class="contents">
  <h2>Pick Up</h2>
  <div class="items">
    <% @item.each do |item| %>
      <div class="item">
        <div class="item-image">
          <%= image_tag item.image.variant(resize: '350x350') %>
          <p><%= item.name %></p>
          <p><%= item.price %>円(税込)</p>
        </div>
        <div class="item-info">
          <div class="bubble03">
           <%= item.description %> 
          </div>
          <div class="producer">
            <%= image_tag item.producer.image.variant(resize: '250x250'), class:"person" %>
            <p><%= "#{item.producer.family_name}"+ "#{item.producer.first_name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="push"></div>
</div>
