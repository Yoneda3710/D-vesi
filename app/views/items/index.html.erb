<div class="header">
  <div class="title">
    <h1><span class="c1">D</span>-vesi</h1>
    <p>農家から直接野菜を購入しよう！</p>
    <div class="btn">
     <ul>
       <% if producer_signed_in? %>
        <li class="left"><%= link_to '商品を投稿する', new_item_path %>
        <li class="center"><%= link_to 'マイページ' %>
        <li class="right"><%= link_to 'ログアウト', destroy_producer_session_path, method: :delete %>
       <% else %> 
        <li class="left"><%= link_to 'ログイン', new_customer_session_path %></li>
        <li class="right"><%= link_to '新規登録', new_customer_registration_path %></li>
       <% end %>
     </ul>
    </div>
  </div>
</div>

<div class="contents">
  <h2>Pick Up</h2>
  <div class="items">
    <% @item.each do |item| %>
      <div class="item">
        <div class="item-image">
          <%= image_tag item.image.variant(resize: '350x350') %>
          <p><%= item.name %></p>
          <p><%= item.price %>円(税込)</p>
        </div>
        <div class="item-info">
          <div class="bubble03">
           <%= item.description %> 
          </div>
          <div class="producer">
            <%= image_tag item.producer.image.variant(resize: '250x250'), class:"person" %>
            <p><%= "#{item.producer.family_name}"+ "#{item.producer.first_name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="push"></div>
</div>

<div class="footer">
  <%= link_to '生産者の方はこちら', new_producer_session_path %>
</div>